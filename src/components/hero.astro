---
import { Picture } from "@astrojs/image/components";
import heroImage from "assets/hero.png";
import bgHome from "assets/bg-home.webp";
import Link from "@components/ui/link.astro";
---

<main class="max-w-screen-xl mx-auto px-5 grid md:grid-cols-2 md:pt-14 md:h-5/6">

  <div class="flex flex-col">
    <h1
      class="text-white text-7xl lg:text-8xl xl:text-8xl font-bold lg:tracking-tight xl:tracking-tighter">
      Hacemos <br> Realidad
    </h1>
    <p class="text-3xl font-medium mt-3 text-white max-w-xl">
      Lo Imaginado
    </p>
    <div class="mt-6">
      <Link
        style="outline"
        size="md">
        Mayor Informaci√≥n
      </Link>
    </div>
  </div>

  <div class="grid place-content-end h-full">
    <Picture 
    src={bgHome}
    alt="bg-home-arquitectura"
    widths={[200, 400, 600]}
    aspectRatio="400:287"
    sizes="(max-width: 800px) 100vw, 620px"
    loading="eager"
    format="avif"
    />
  </div>
</main>
